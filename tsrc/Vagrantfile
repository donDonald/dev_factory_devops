# -*- mode: ruby -*-
# vi: set ft=ruby :

servers=[
    {
        :hostname => "h1",
        :ip => "192.168.100.10",
        :box => "generic/ubuntu2004",
        :ram => 2048,
        :cpu => 1,
        :ports => [
            {   # portainer
                :host => 9000,
                :guest => 9000,
            },
            {   # pagdmin
                :host => 11111,
                :guest => 11111,
            },
            {   # dockprom.cadvisor
                :host => 8080,
                :guest => 8080,
            },
            {   # dockprom.grafana
                :host => 3000,
                :guest => 3000,
            },
            {   # dockprom.prometheus
                :host => 9090,
                :guest => 9090,
            },
            {   # dockprom.pushgateway
                :host => 9091,
                :guest => 9091,
            },
            {   # dockprom.alertmanager
                :host => 9093,
                :guest => 9093,
            }
        ]
    },
    {
        :hostname => "h2",
        :ip => "192.168.100.100",
        :box => "generic/ubuntu2004",
        :ram => 1024,
        :cpu => 1,
        :ports => [
#           {   # app server
#               :host => 3000,
#               :guest => 3000,
#           }
        ]
    }
#   {
#       :hostname => "h3",
#       :ip => "192.168.100.101",
#       :box => "generic/ubuntu2004",
#       :ram => 1024,
#       :cpu => 1,
#       :ports => [
#       ]
#   }
]

Vagrant.configure("2") do |config|
    servers.each do |machine|
        config.vm.define machine[:hostname] do |node|
            node.vm.box = machine[:box]
            node.vm.hostname = machine[:hostname]
            node.vm.network "private_network", ip: machine[:ip]
            node.vm.provider "virtualbox" do |vb|
                vb.customize ["modifyvm", :id, "--memory", machine[:ram]]
            end
            # forward ports
            machine[:ports].each do |ports|
                node.vm.network "forwarded_port", guest:ports[:guest], host:ports[:host]
            end
        end
    end
end
